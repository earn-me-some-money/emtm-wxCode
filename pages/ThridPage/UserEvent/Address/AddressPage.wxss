

.addr_list {
  display: block;
  position: fixed;

  top: 0;
  left: 5%;
  right: 5%;
  width: 90%;
  height: 80%;
}

.listItem {

  left: 5%;
  height: 200rpx;
  margin-top: 50rpx;
}
.address-name {
  position: relative;
  height: 40rpx;
  left: 0;
  top: 0;

  font-size: 32rpx;
}

.otherinfo {
  position: relative;
  height: 160rpx;
  left: 0;
  top:40rpx;
}

.username {
  position: absolute;
  height: 30rpx;
  margin-top: 30rpx;

  font-size: 24rpx;
}

.telephone {
  position: absolute;
  height: 30rpx;
  left: 40%;
  margin-top: 30rpx;

  font-size: 24rpx;
}

.edit {
  position: absolute;
  left: 90%;

  background-color: transparent;
}

.edit::after{
  border: 0;
}

.edit_image {
  
  left: 70%;

  width: 50rpx;
  height: 50rpx;
}

.divLine {
  position: absolute;
  background: #E0E3DA;
  width: 100%;
  height: 2rpx;
}

.addNewAddr{

  position: absolute;
  top:80%;
  margin-top: 20rpx; 
  height: 60rpx; 
  line-height: 60rpx; 
  background: #fff; 
  color:#1e82d2;  
  border-radius: 98rpx;
  align-content: center;
}

