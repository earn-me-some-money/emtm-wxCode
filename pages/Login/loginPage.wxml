<view class="container">
  <view class="login-icon">
    <image class="login-img" src="../../images/登陆页面.jpg"></image>
  </view>
  <view class="login-from">
 
    <!--账号-->
    <view class="inputView">
      <image class="nameImage" src="../../images/姓名.png"></image>
      <label class="loginLab">账号</label>
      <input class="inputText" placeholder="请输入账号" bindinput="phoneInput" />
    </view>
    <view class="line"></view>
 
    <!--密码-->
    <view class="inputView">
      <image class="keyImage" src="../../images/密码.png"></image>
      <label class="loginLab">密码</label>
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" />
    </view>

    <radio-group class="type-radio-group" bindchange="typeChange">
        <radio class="radio1" value="fetch" checked>奶牛</radio>
        <radio class="radio2" value="write">大学生</radio>
        <radio class="radio3" value="trade">游客</radio>
    </radio-group>
 
    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button>
    </view>
  </view>
</view>