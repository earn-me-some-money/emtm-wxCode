<!--pages/SecondPage/newOrder/newOrderPage.wxml-->

<view class='container'>

  <view class='baseInfo'>

    <view class='partId'>
      <text class='id'>{{"问题序号:" + "   " }}</text>
      <text class='input_id'>{{id+1}}</text>
    </view>

    <view class='partType'>
      <view class='choice'>问题类型: </view>
      <radio-group class="type-radio-group" bindchange="typeChange">
        <radio class="radio1" value="type1" checked>填空题</radio>
        <radio class="radio2" value="type2">单选题</radio>
        <radio class="radio3" value="type3">多选题</radio>
      </radio-group>
    </view>
    


    <view class='partTaskName'>
        <text class='taskname'>题目内容:</text>
        <input class='input_task' placeholder='请输入题目内容(30个字以内)' maxlength="30" bindinput="contentInput"></input>
    </view>


    <block wx:if="{{have_choice}}">
      <view class='partChoice'>
        <text class='content'>提供选项:</text>

        <view class='choice'>
          <view class='choice_text'>{{'A: '}}</view>
          <input class='input_content' placeholder='输入A选项内容，若无此选项则不输入' bindinput="choice1"></input>
        </view>

        <view class='choice'>
          <view class='choice_text'>{{'B: '}}</view>
          <input class='input_content' placeholder='输入B选项内容，若无此选项则不输入' bindinput="choice2"></input>
        </view>

        <view class='choice'>
          <view class='choice_text'>{{'C: '}}</view>
          <input class='input_content' placeholder='输入C选项内容，若无此选项则不输入' bindinput="choice3"></input>
        </view>

        <view class='choice'>
          <view class='choice_text'>{{'D: '}}</view>
          <input class='input_content' placeholder='输入D选项内容，若无此选项则不输入' bindinput="choice4"></input>
        </view>

      </view>
    </block>

  </view>

  <button class='last_question' bindtap='last'>上一道题</button>
  <button class='next_question' bindtap='next'>下一道题</button>
  <button class='finish' bindtap='finish'>已完成</button>

</view>
